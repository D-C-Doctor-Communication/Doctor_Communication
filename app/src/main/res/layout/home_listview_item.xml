<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <androidx.cardview.widget.CardView style="@style/home_vertical_scrollCard">
            <ImageView
                android:id="@+id/record_img"
                style="@style/home_vertical_scrollCard_imgView"/>
            <TextView
                android:id="@+id/record_title"
                style="@style/home_vertical_scrollCard_title" />
            <TextView
                android:id="@+id/record_content_painLevel"
                style="@style/home_vertical_scrollCard_content" />

            <TextView
                android:id="@+id/record_content_characteristics"
                style="@style/home_vertical_scrollCard_content"
                android:layout_marginTop="75dp" />

            <TextView
                android:id="@+id/record_content_situation"
                style="@style/home_vertical_scrollCard_content"
                android:layout_marginTop="93dp"/>
        </androidx.cardview.widget.CardView>

        <!--ImageView Text : android:contentDescription="허리 통증" -->
    </RelativeLayout>
</LinearLayout>